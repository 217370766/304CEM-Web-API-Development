
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->


  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/pdadmin"><i class="fas fa-angle-double-left"></i> All PD</a>
            </div>
         </div>
        <div class="section-title">
            <h2><span>Update</span> PD</h2><br>

         <form method="POST" id="update_pd">
            <div class="new_pd">
                <div class="form-group">
                    <p><label for="title" class="">Title</label></p>
                    <input type="text" name="title" value="<%= pd.title%>" placeholder="email" class="form-control">
                </div><br>
                <div class="form-group"> 
                    <p><label for="price" class="">Price</label></p>
                    <input type="hidden" name="id" value="<%= pd._id %>">
                    <input type="text" name="price" value="<%= pd.price %>" placeholder="price" class="form-control">
                </div><br>
                <div class="form-group"> 
                    <p><label for="price" class="">Description</label></p>
                    <input type="hidden" name="id" value="<%= pd._id %>">
                    <textarea type="text" rows="2"  name="description" value="<%= pd.description %>" placeholder="Description" class="form-control"></textarea>
                </div><br>
                <div class="form-group">
                    <button type="submit" class="btn book-a-table-btn scrollto">Save</button>
                </div>
            
            </div>
        </form>
       
    </div>
</main>


<!-- /Main Site -->

